<!--ヘッダーの部分テンプレート-->
<header>
  <nav class="navbar navbar-expand-lg navbar-dark mb-3">
    <div class="container">
      <!--ページブランドロゴ-->
      <a class="navbar-brand pl-3" href="/"><%= image_tag 'brand.png',width: '75%', height: '75%' %></a>
      <!--ハンバーガーメニュー-->
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!--ヘッダーの各リンク-->
      <div class="collapse navbar-collapse  justify-content-end" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <!--常時表示されるヘッダーメニュー項目-->
          <li class="nav-item ml-2">
            <%= link_to about_path, class: 'nav-link' do %>
              <i class="fa-solid fa-circle-question"></i> About
            <% end %>
          </li>

          <li class="nav-item ml-2">
            <%= link_to search_path, class: 'nav-link' do %>
              <i class="fa-solid fa-magnifying-glass"></i> 検索
            <% end %>
          </li>

          <li class="nav-item ml-2">
            <%= link_to posts_path, class: 'nav-link' do %>
              <i class="fa-solid fa-camera"></i> 投稿一覧
            <% end %>
          </li>

          <li class="nav-item ml-2">
            <%= link_to customers_path, class: 'nav-link' do %>
              <i class="fa-solid fa-users"></i> ユーザー一覧
            <% end %>
          </li>

          <!--特定条件によって表示されるヘッダーメニュー項目-->
          <%if customer_signed_in? %>
            <!--サインイン時は「マイページ」と「ログアウト」を表示-->
            <li class="nav-item ml-2">
              <%= link_to customer_path(current_customer), class: 'nav-link' do %>
                <i class="fa-solid fa-user"></i> マイページ
              <% end %>
            </li>

            <li class="nav-item ml-2">
              <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link' do %>
                <i class="fa-solid fa-right-from-bracket"></i> ログアウト
              <% end %>
            </li>
          <%else %>
            <!--非サインイン時は「新規登録」と「ログイン」を表示-->
            <li class="nav-item ml-2">
              <%= link_to new_customer_registration_path, class: 'nav-link' do %>
                <i class="fa-solid fa-user-plus"></i> 新規登録
              <% end %>
            </li>

            <li class="nav-item ml-2">
              <%= link_to new_customer_session_path, class: 'nav-link' do %>
                <i class="fa-solid fa-right-to-bracket"></i> ログイン
              <% end %>
            </li>
          <%end %>
          <!--adminログアウト用ボタン-->
          <% if admin_signed_in? %>
            <li class="nav-item ml-2">
              <%= link_to "ログアウト（管理者）", destroy_admin_session_path, method: :delete, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>