<% if customer_signed_in? %>
  <div class="search_form">
    エラー出て使えない
    <%= form_with url: public_search_path, local: true, method: :get do |f| %>
      <%= f.select :range, options_for_select([['User'], ['Word']]) %>
      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"], ["後方一致","backward_match"], ["部分一致","partial_match"]]) %><br>
      <%= f.text_field :word %><br>
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>
