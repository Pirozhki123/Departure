<div class="form-group">
  <% if @customer.image.attached? %>
    <%= image_tag @customer.image, size: "192x108" %>
  <% else %>
    <%= image_tag 'no_image', size: "192x108" %>
  <% end %>
</div>
<div class="form-group">
  <h5>ユーザーネーム</h5>
  <%= @customer.name %>
</div>
<div class="form-group">
  <h5>メールアドレス</h5>
  <%= @customer.email %>
</div>
<div class="form-group">
  <h5>非公開設定</h5>
  <% if @customer.private == false %>
    <p>公開</p>
  <% else %>
    <p>非公開</p>
  <% end %>
</div>
<%= form_with model: @customer, url: admin_customer_path do |f| %>
  <div class="form-group">
    <%= f.radio_button :is_deleted, :false %>
    <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
    <%= f.radio_button :is_deleted, :true %>
    <%= f.label :is_deleted, "退会済み", {value: :true, style: "display: inline-block;"} %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>