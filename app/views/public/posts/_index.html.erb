<div class ="text-center pt-2 pb-2">
  <%= link_to new_public_post_path do %>
    <h1>
      <i class="fa-solid fa-circle-plus"></i>
    </h1>
  <% end %>
</div>
<div class="card-deck">
  <% posts.each do |post| %>
    <div class="col-md-6">
      <div class="card mt-2 mb-2 shadow-sm text-center" >
        <%= link_to  public_post_path(post) do %>
          <% if post.image.attached? %>
            <%= image_tag post.image, size: "192x108", class: "card-img-top img-fluid" %>
          <% else %>
            <%= image_tag 'no_image', size: "192x108", class: "card-img-top" %>
          <% end %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title">
            <%= post.place.place_name %>
            <%= render 'public/favorites/btn', post: post %>
          </h5>
          <div class="card-item pb-4">
            <% post_tags = post.tags %>
              <% post_tags.each do |tag| %>
                <%= link_to  public_search_path(word: tag.tag, range:"Tag", search: "perfect_match"), class: 'pr-2' do %>
                <%= tag.tag %><%= "(#{tag.posts.count})" %>
              <% end %>
            <% end %>
          </div>
          <div class="card-item d-flex justify-content-between align-items-center">
            <div class="btn-group">
              <% if post.customer == current_customer %>
                <%= link_to "削除", public_post_path(post), method: :delete, class: 'btn btn-danger', "data-confirm" => "本当に削除しますか？" %>
              <% end %>
            </div>
            <%= link_to public_customer_path(post.customer) do %>
              <p>
                <%= post.customer.name %>
                <%= image_tag post.customer.get_profile_image(30, 30), class: "img-thumbnail" %>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>