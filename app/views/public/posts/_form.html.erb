<%= form_with model: post, url: public_posts_path, local: true do |f| %>
  <div class="form-group">
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="form-group">
    <%= f.text_field :place, value: "", placeholder: "場所" %>
  </div>

  <div class="form-group">
    <%= f.text_field :tag, placeholder: "タグ（タグ1,タグ2,~）" %>
  </div>

  <div class="form-group">
    <%= f.text_area :introduction, placeholder: "説明" %>
  </div>

  <div class="form-group">
    <%= f.submit '投稿' %>
  </div>
<% end %>