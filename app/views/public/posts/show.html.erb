<div class="container">
  <div class="row ">

  <div class="mt-2 mb-2 shadow-sm text-center" >
    <% if @post.image.attached? %>
      <%= image_tag @post.image, class: 'img-fluid' %>
    <% else %>
      <%= image_tag 'no_image', class: 'img-fluid' %>
    <% end %>
    <div class="card-body">
      <h3 class="card-title">
        <%= @post.place.place_name %>
        <%= render 'public/favorites/btn', post: @post %>
      </h3>
      <div class="card-item pb-4">
        <% post_tags = @post.tags %>
      <% post_tags.each do |tag| %>
        <%= link_to  public_search_path(word: tag.tag, range:"tag", search: "perfect_match"), class: 'pr-2' do %>
          <%= tag.tag %><%= "(#{tag.posts.count})" %>
        <% end %>
      <% end %>
      </div>

      <p class="text">
        <%= @post.introduction %>
      </p>
      <div class="card-item">
        <%= link_to public_customer_path(@post.customer) do %>
          <p>
            <%= image_tag @post.customer.get_profile_image(25, 25), class: "img-thumbnail" %>
            <%= @post.customer.name %>#<%= @post.customer.id %>
          </p>
        <% end %>
      </div>
      <div class="card-item">

        <% if @post.customer == current_customer %>
          <%= link_to "編集", edit_public_post_path(@post), class: 'btn btn-secondary' %>
          <%= link_to "削除", public_post_path(@post), method: :delete, class: 'btn btn-danger', "data-confirm" => "本当に削除しますか？" %>
        <% end %>
      </div>
      <div class="card-item pb-2">
        <h5>コメント欄</h5>
        <% @post.comments.each do |comment| %>
          <div class="comment pb-2">
            <%= comment.body %>
            <%= link_to public_customer_path(comment.customer) do %>
              <%= image_tag comment.customer.get_profile_image(25, 25), class: "img-thumbnail" %>
            <% end %>
            <!--<= comment.customer.name %>-->
            <!--<= comment.created_at.strftime('%Y%m%d') %>-->
          </div>
        <% end %>
      </div>
      <div class="card-item">
        <%= form_with model: @comment, url: public_post_comments_path(@post) do |f| %>
          <%= f.text_area :body, rows: '5', placeholder: "コメント", class: "col-md-6" %><br>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>


  </div>
</div>