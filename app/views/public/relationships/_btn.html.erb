<!--フォローアンフォローボタンの部分テンプレート-->
<div id="follow_btn_<%= customer.id %>">
  <% if customer != current_customer %>
    <% if current_customer.following?(customer) %>
      <%= link_to customer_relationships_path(customer), remote: true, method: :delete do %>
        <button class="btn btn-info btn-sm">フォロー外す</button>
      <% end %>
    <% else %>
      <%= link_to customer_relationships_path(customer), remote: true, method: :post do %>
        <button class="btn btn-success btn-sm">フォローする</button>
      <% end %>
    <% end %>
  <% end %>
</div>