<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-12">
      <%= render 'layouts/search' %>
      <table class="table table-hover table-inverse">
        <% if @range == "User" %>
          <h2>Users search for "<%="#{@word}"%>"</h2>
          <%= render 'public/customers/index', customers: @customers %>
        <% elsif @range == "Place" %>
          <h2>Place search for "<%="#{@word}"%>"<i class="fas fa-heart" aria-hidden="true" style="color: red;"></i><%= @favorite_count %></h2>
          <%= render 'public/posts/index', posts: @posts %>
        <% else %>
          <h2>Posts search for "<%="#{@word}"%>"</h2>
          <%= render 'public/posts/index', posts: @posts %>
        <% end %>
      </table>
    </div>
  </div>
</div>