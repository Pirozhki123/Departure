<div class="container">
  <div class="row">
    <div class=".col-md-3">
      <h1>トップページ</h1>
    </div>
    <div class=".col-md-6">
      <% @posts.each do |post| %>
      <div class="card" >
        <% if post.image.attached? %>
          <%= image_tag post.image, size: "192x108" %>
        <% else %>
          <%= image_tag 'no_image', size: "192x108" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title">
            <%= post.place.place_name %>
          </h5>
          <% post_tags = post.tags %>
          <% post_tags.each do |tag| %>
            <h6 class="card-subtitle">
              <%= tag.tag %>
            </h6>
            <!--<= link_to tag.tag, search_path(word: tag.tag, range:"tag", search: "perfect_match") %>-->
          <% end %>
          <p class="card-text">
            <%= post.introduction %>
          </p>
        </div>
      </div>
      <% end %>
    </div>
    <div class=".col-md-3">
      <%= render 'public/posts/form', post: @post %>
    </div>
  </div>
</div>

