<div class="container">
  <div class="row">
    <div class="profile-group">
      <% if @customer.image.attached? %>
        <%= image_tag @customer.image, size: "192x108" %>
      <% else %>
        <%= image_tag 'no_image', size: "192x108" %>
      <% end %>
    </div>
    <div class="profile-group">
      <%= @customer.name %>(#<%= @customer.id %>)
    </div>
    <div class="profile-group">
      <% if @customer.private == false %>
        <p>公開</p>
      <% else %>
        <p>非公開</p>
      <% end %>
    </div>
    <div class="profile-group">
      <%= @customer.introduction %>
    </div>
    <div class="profile-group">
      <%= link_to "Edit", edit_public_customer_path, class: 'btn btn-success' %>
    </div>
    <div class="profile-group">
      <%= link_to "いいね一覧", favorite_posts_public_customer_path(params[:id]), class: 'btn btn-success' %>
    </div>
  </div>
</div>