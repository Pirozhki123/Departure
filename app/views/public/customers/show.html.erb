<div class="container">
  <div class="row">
    <div class="profile-group">
      <% if @customer.image.attached? %>
        <%= image_tag @customer.image, size: "192x108" %>
      <% else %>
        <%= image_tag 'no_image', size: "192x108" %>
      <% end %>
    </div>
    <div class="profile-group">
      <%= @customer.name %>(#<%= @customer.id %>)
    </div>
    <div class="profile-group">
      <% if @customer.private == false %>
        <p>公開</p>
      <% else %>
        <p>非公開</p>
      <% end %>
    </div>
    <div class="profile-group">
      <%= @customer.introduction %>
    </div>
    <div class="profile-group">
      <%= link_to "Edit", edit_public_customer_path, class: 'btn btn-success' %>
    </div>
    <div class="profile-group">
      <%= link_to "いいね一覧", favorite_posts_public_customer_path(params[:id]), class: 'btn btn-success' %>
    </div>
    <div class="profile-group">
      <% if @customer != current_customer %>
        <% if @customer.is_followed_by?(current_customer) %>
          <%= link_to public_customer_relationships_path(@customer), method: :delete do %>
            <button class="btn btn-info">フォロー外す</button>
          <% end %>
        <% else %>
          <%= link_to public_customer_relationships_path(@customer), method: :post do %>
            <button class="btn btn-success">フォローする</button>
          <% end %>
        <% end %>
      <% else %>
        <%= link_to edit_public_customer_path(@customer), class: "btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>