<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="6"></th>
    </tr>
  </thead>
  <tbody>
    <% customers.each do |customer| %>
      <tr>
        <td>
          <%= link_to public_customer_path(customer) do %>
            <%= image_tag customer.get_profile_image(50, 50) %>
          <% end %>
        </td>
        <td>
          <%= link_to public_customer_path(customer) do %>
            <%= customer.name %>
          <% end %>
        </td>
        <td>
          <%= link_to public_customer_followings_path(customer) do %>
            フォロー : <%= customer.followings.count %>
          <% end %>
        </td>
        <td>
          <%= link_to public_customer_followers_path(customer) do %>
            フォロワー : <%= customer.followers.count %>
          <% end %>
        </td>
        <td>
          <% if customer != current_customer %>
            <% if current_customer.following?(customer) %>
              <%= link_to public_customer_relationships_path(customer), method: :delete do %>
                <button class="btn btn-info">フォロー外す</button>
              <% end %>
            <% else %>
              <%= link_to public_customer_relationships_path(customer), method: :post do %>
                <button class="btn btn-success">フォローする</button>
              <% end %>
            <% end %>
          <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>