<div class="container">
  <div class="row fadeIn">
    <div class="col-md-12">

      <%= form_with model: @customer, url: public_customer_path do |f| %>
        <div class="profile-group row">
          <dt class="col-2 text-right"></dt>
          <dd class="col-7"><%= image_tag @customer.get_profile_image(192, 108), class: "profile_image" %></dd>
        </div>

        <div class="form-group row ">
          <dt class="col-2 text-right"><%= f.label :profile_image, "プロフィール画像" %></dt>
          <dd class="col-7"><%= f.file_field :profile_image, accept: "image/*" %></dd>
        </div>

        <div class="profile-group row pb-3">
          <dt class="col-2 text-right"><%= f.label :name, "ユーザーネーム" %></dt>
          <dd class="col-7"><%= f.text_field :name %></dd>
        </div>

        <div class="profile-group row pb-3">
          <dt class="col-2 text-right"><%= f.label :email, "メールアドレス" %></dt>
          <dd class="col-7"><%= f.text_field :email %></dd>
        </div>

        <div class="profile-group row pb-3">
          <dt class="col-2 text-right"><%= f.label :introduction, "自己紹介" %></dt>
          <dd class="col-7"><%= f.text_area :introduction %></dd>
        </div>

        <div class="form-group row pb-3">
          <dt class="col-2 text-right"></dt>
          <dd class="col-7"><%= f.submit class: 'btn btn-success' %></dd>
        </div>
      <% end %>

    </div>
  </div>
</div>