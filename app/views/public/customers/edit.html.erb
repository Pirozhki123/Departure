<%= form_with model: @customer, url: public_customer_path do |f| %>
  <div class="profile-group">
    <% if @customer.profile_image.attached? %>
      <%= image_tag @customer.profile_image, size: "192x108" %>
    <% else %>
      <%= image_tag 'no_image', size: "192x108" %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="profile-group">
    <h5>ユーザーネーム</h5>
    <%= f.text_field :name %>
  </div>
  <div class="profile-group">
    <h5>メールアドレス</h5>
    <%= f.text_field :email %>
  </div>

  <div class="profile-group">
    <h5>紹介文</h5>
    <%= f.text_field :introduction %>
  </div>
  <div class="profile-group">
    <h5>非公開設定</h5>
    <%= f.radio_button :private, :false %>
    <%= f.label :private, "公開", {value: :false, style: "display: inline-block;"} %>
    <%= f.radio_button :private, :true %>
    <%= f.label :private, "非公開", {value: :true, style: "display: inline-block;"} %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>